<UserControl x:Class="BluePrintEditor.Designer.ToolBox.ToolBoxItemControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:icons="clr-namespace:MahApps.Metro.IconPacks;assembly=MahApps.Metro.IconPacks"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Grid>
		<ToggleButton>
			<ToggleButton.Content>
				<StackPanel Orientation="Vertical">
					<!--<Image Source="{Binding IconUri}" HorizontalAlignment="Center" 
					       Height="48" Width="48" VerticalAlignment="Top" />-->
					<icons:PackIconModern Height="48" Width="48" Kind="{Binding IconKind}"/>
					<TextBlock Text="{Binding ToolTitle}" TextAlignment="Center" TextWrapping="Wrap" 
						HorizontalAlignment="Stretch" VerticalAlignment="Bottom"/>
				</StackPanel>
			</ToggleButton.Content>
		</ToggleButton>
	</Grid>
</UserControl>